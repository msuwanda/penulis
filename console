$console
  // console comand name
	->register('crud-3')
	->addArgument('tabel', InputArgument::REQUIRED, 'Table Name')
	->addArgument('folder', InputArgument::REQUIRED, 'Folder Name ')
	->setCode(function (InputInterface $input, OutputInterface $output) use ($api_key,$fileSystem,$PLINK){

		$rows = 17;
		$progressBar = new ProgressBar($output, $rows);
		$progressBar->setBarCharacter('<fg=magenta>=</>');
		$progressBar->setProgressCharacter("<fg=magenta>アニサ</>");
		$progressBar->setFormat('custom');
		$progressBar->setMessage('Start');

		$output->writeln([
				"\n",
				" Mandala app generator -- modul  <comment>494C5641</comment>",
				" -----------------------------------",
		]);
		$column = "SHOW COLUMNS FROM ".$input->getArgument('tabel') ;
		$sth 	= $PLINK->prepare($column);
		$sth->execute();
		$rows = $sth->fetchAll(PDO::FETCH_ASSOC) ;
		
		$tabel_name  	= 	$input->getArgument('tabel') ;
		$table 	 	 	=  $input->getArgument('modul_name') ;
		$base_folder 	= 'views/'.$input->getArgument('folder') ;
		$api_folder  	= 'api/'.$input->getArgument('folder') ;
		$_kode    	 	= explode("_",$input->getArgument('table')) ;
		$_kode_create		= $_kode[1]."_create" ;
		$_kode_rinci		= $_kode[1]."_rinci"  ;
		$_kode_update		= $_kode[1]."_update" ;
		$_input_create 	= "" ;
		foreach($rows as $data) {
			$_name_people = explode("_",$data['Field']) ;

			$_input_create .= "\t\t\t\t\t"."<div class=\"position-relative row form-group\">\n" ;
			$_input_create .= "\t\t\t\t\t"."  <label class=\"col-sm-2 col-form-label\">".ucfirst($_name_people[1])."</label>\n" ;
			$_input_create .= "\t\t\t\t\t"."    <div class=\"col-md-10\">\n" ;
			$_input_create .= "\t\t\t\t\t"."        <input type=\"text\" class=\"form-control\" name=\"".$_name_people[1]."\">\n" ;
			$_input_create .= "\t\t\t\t\t"."    </div>\n" ;
			$_input_create .= "\t\t\t\t\t"."</div>\n" ;
		}
		$output->writeln($_input_create) ;

		usleep(300000);
		$progressBar->advance();
		$progressBar->setMessage('create folder views'.$base_folder.'');
		$fileSystem->mkdir($base_folder, 0777);
		
		usleep(300000);
		$progressBar->advance();
		$progressBar->setMessage('create folder modul'.$base_folder.'');
		$fileSystem->mkdir($api_folder, 0777);

		// create modul 

		usleep(300000);
		$progressBar->advance();
		$progressBar->setMessage('create views create.php');
		$_tambah  = file_get_contents("src/views/create.php");
		$_tambah  = str_replace("__INPUT_TITTILE__", $_kode , $_tambah);
		$_tambah  = str_replace("__INPUT_ROWS__", $_input_create, $_tambah);
		$fp = fopen($base_folder."/create.php", "w+");
		fwrite($fp, $_tambah);
		fclose($fp);

});

$console->run();
